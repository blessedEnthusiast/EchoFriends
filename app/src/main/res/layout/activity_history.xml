<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/roj27ryhqdgq"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Logo Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/rwqqhn8fw8le"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginTop="19dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/high_five"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Logo Text -->

            <!-- Status Updates Title -->

            <TextView
                android:id="@+id/rnzcykyrmvmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="Post. Echo. Repeat"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/rwqqhn8fw8le"
                app:layout_constraintTop_toBottomOf="@id/rwqqhn8fw8le"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/rboyy5pl6a0p"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Status Updates"
                android:layout_marginTop="33dp"
                app:layout_constraintTop_toBottomOf="@id/rnzcykyrmvmi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- No Updates Text -->
            <TextView
                android:id="@+id/rftvhpjbu05j"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="No status updates!"
                android:layout_marginTop="38dp"
                app:layout_constraintTop_toBottomOf="@id/rboyy5pl6a0p"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Bottom Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/rhy64733q9gp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="360dp"
                android:layout_marginBottom="26dp"
                android:scaleType="fitXY"
                android:src="@drawable/back_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rftvhpjbu05j"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>